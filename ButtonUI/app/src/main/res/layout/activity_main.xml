<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/facebook_magic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:magic_button_size="50dp"
            app:button_icon="@drawable/facebook2"
            app:button_icon_width="25dp"
            app:button_icon_height="25dp"
            app:hide_text="Facebook"
            app:hide_text_size="7dp"
            app:hide_text_color="@android:color/black"
            app:icon_button_color="#375dda"
            app:expandable_area_color="#200cb7"/>
        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/twitter_magic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:magic_button_size="50dp"
            app:button_icon="@drawable/twitter"
            app:button_icon_width="25dp"
            app:button_icon_height="25dp"
            app:hide_text="Facebook"
            app:hide_text_size="7dp"
            app:hide_text_color="@android:color/black"
            app:icon_button_color="#ebecf2"
            app:expandable_area_color="#200cb7"/>
        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/github_magic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:magic_button_size="50dp"
            app:button_icon="@drawable/github"
            app:button_icon_width="25dp"
            app:button_icon_height="25dp"
            app:hide_text="Facebook"
            app:hide_text_size="7dp"
            app:hide_text_color="@android:color/black"
            app:icon_button_color="#e4e6ec"
            app:expandable_area_color="#200cb7"/>
        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/youtube_magic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:magic_button_size="50dp"
            app:button_icon="@drawable/youtube"
            app:button_icon_width="25dp"
            app:button_icon_height="25dp"
            app:hide_text="Facebook"
            app:hide_text_size="7dp"
            app:hide_text_color="@android:color/black"
            app:icon_button_color="#c4c5c9"
            app:expandable_area_color="#200cb7"
            android:layout_marginBottom="20dp"/>

        <com.spark.submitbutton.SubmitButton
            android:id="@+id/spark_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit"
            android:textColor="@color/gray"
            app:sub_btn_background="@color/white"
            app:sub_btn_duration="3000"
            app:sub_btn_line_color="#1abc9c"
            app:sub_btn_ripple_color="#1abc9c"
            app:sub_btn_tick_color="@color/white" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>